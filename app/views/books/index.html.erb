<h1>Books</h1>

<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
  </thead>

<% @books.each do |book| %>
  <tbody>
    <span><%= book.title %></span>
    <span><%= book.body %></span>
   </tr>
  </tbody>
</table>
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <div class="field">
    <div class="title">Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <div class="body">Body</div>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>


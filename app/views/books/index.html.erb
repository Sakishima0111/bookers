<h1>Books</h1>

<table>
  <tr>
    <th>Title</th><th>Body</th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>


<h2>New book</h2>
<% if @book.errors[:body].any? %>
      <div class="error">
       ・Title <%= @book.errors[:body].first %>
      </div>
    <% end %>
<% if @book.errors[:body].any? %>
      <div class="error">
      ・Body <%= @book.errors[:body].first %>
      </div>
    <% end %>
<%= form_with model: @book do |f| %>

  <div class="field">
    <div class="title">Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <div class="body">Body</div>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>


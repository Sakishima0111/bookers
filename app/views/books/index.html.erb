<h1>Books</h1>
<% @books.each do |book| %>

<table>
  <tr>
    <th>Title</th><th>Body</th>
  </tr>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
</table>

<% end %>


<h2>New book</h2>
<%= form_with model: @book do |f| %>

  <div class="field">
    <div class="title">Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <div class="body">Body</div>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>


<body>
<h1 class="page-title">Books</h1>

<table>
  <tr>
    <th class="table-head">Title</th>
    <th class="table-head">Body</th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td class="table-box"><%= book.title %></td>
    <td class="table-box"><%= book.body %></td>
    <td class="table-box"><%= link_to "Show", book_path(book.id) %></td>
    <td class="table-box"><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td class="table-box"><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>


<h2 class="Newbook">New book</h2>

<div class="error-message">
  <% flash.each do |message_type, message| %>
    <h2 class="flash-message"><%= @book.errors.count %> <%= message %></h2>
  <% end %>

  <ul>
  <% if @book.errors[:title].any? %>
    <div class="error">
      <li>Title <%= @book.errors[:title].first %></li>
    </div>
  <% end %>
  <% if @book.errors[:body].any? %>
    <div class="error">
      <li>Body <%= @book.errors[:body].first %></li>
    </div>
  <% end %>
  </ul>
</div>


<%= form_with model: @book do |f| %>
  <div class="field">
    <div class="title">Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <div class="body">Body</div>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

</body>


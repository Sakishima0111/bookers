<div class="show-notice">
  <%= flash[:notice] %>
</div>

<div class="error-message">

  <ul>
  <% if @book.errors[:title].any? %>
    <div class="error">
      <li>Title <%= @book.errors[:title].first %></li>
    </div>
  <% end %>
  <% if @book.errors[:body].any? %>
    <div class="error">
      <li>Body <%= @book.errors[:body].first %></li>
    </div>
  <% end %>
  </ul>
</div>

<p class="show-p">Title: <%= @book.title %></p>

<p class="show-p">Body: <%= @book.body %></p>


<%= link_to "Edit", edit_book_path(@book.id) %>
|<%= link_to "Back", books_path(@book.id) %>

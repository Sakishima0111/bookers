<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
<div class="form">
  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <label>Body</label><br>
  <%= f.text_area :body %>

 <P> <%= f.submit 'Update Book'%></p>

<% end %>
<p>
<%= link_to "Show", book_path(@book.id) %>
|<%= link_to "Back", books_path(@book) %>

  </P>
</div>

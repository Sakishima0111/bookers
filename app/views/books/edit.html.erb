<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
<div class="form">
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book'%>

<% end %>
  <p>

    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    <a href="/books">Back</a>

  </P>
</div>
